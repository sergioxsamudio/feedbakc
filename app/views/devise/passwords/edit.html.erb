<%# app/views/devise/passwords/edit.html.erb (o app/views/admins/passwords/edit.html.erb) %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 p-8 bg-white bg-opacity-90 rounded-lg shadow-xl">
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        Cambiar tu contraseña
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Ingresa tu nueva contraseña a continuación.
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "mt-8 space-y-6" }) do |f| %>
      <%# Renderiza los mensajes de error de Devise con un estilo coherente %>
      <%# Asegúrate de que este parcial esté estilizado en devise/shared/_error_messages.html.erb %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= f.hidden_field :reset_password_token %>

      <div class="rounded-md shadow-sm -space-y-px">
        <%# Campo Nueva Contraseña %>
        <div class="relative mb-4">
          <%= f.label :password, "Nueva contraseña", class: "absolute left-4 text-gray-500 text-base transform duration-300
            -translate-y-full scale-75 bg-white px-1 top-2
            peer-placeholder-shown:top-1/2 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:scale-100 peer-placeholder-shown:bg-transparent peer-placeholder-shown:px-0" %><br />
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500 block mb-2">(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: " ", class: "peer block w-full py-3 px-4 border-2 border-gray-300 rounded-full text-gray-900 appearance-none focus:outline-none focus:border-orange-500 bg-white bg-opacity-70" %>
        </div>

        <%# Campo Confirmar Nueva Contraseña %>
        <div class="relative mb-4">
          <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "absolute left-4 text-gray-500 text-base transform duration-300
            -translate-y-full scale-75 bg-white px-1 top-2
            peer-placeholder-shown:top-1/2 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:scale-100 peer-placeholder-shown:bg-transparent peer-placeholder-shown:px-0" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " ", class: "peer block w-full py-3 px-4 border-2 border-gray-300 rounded-full text-gray-900 appearance-none focus:outline-none focus:border-orange-500 bg-white bg-opacity-70" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Cambiar mi contraseña", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-medium rounded-full text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-300" %>
      </div>
    <% end %>

    <%# Si quieres mostrar otros enlaces (como login o registro) %>
    <%= render "devise/shared/links" %>
    <%# O si es para admins: <%= render "admins/shared/links" %>

  </div>
</div>
