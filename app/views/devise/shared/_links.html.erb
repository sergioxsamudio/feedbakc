<%# app/views/devise/shared/_links.html.erb (o app/views/admins/shared/_links.html.erb) %>

<div class="mt-8 text-center text-sm space-y-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Iniciar sesión", new_session_path(resource_name), class: "block font-medium text-orange-600 hover:text-orange-500 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Crear una cuenta", new_registration_path(resource_name), class: "block font-medium text-orange-600 hover:text-orange-500 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "block font-medium text-orange-600 hover:text-orange-500 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "¿No recibiste instrucciones de confirmación?", new_confirmation_path(resource_name), class: "block font-medium text-orange-600 hover:text-orange-500 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "¿No recibiste instrucciones de desbloqueo?", new_unlock_path(resource_name), class: "block font-medium text-orange-600 hover:text-orange-500 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Iniciar sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %><br />
    <% end %>
  <% end %>
</div>
