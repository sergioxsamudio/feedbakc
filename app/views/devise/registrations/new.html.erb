<%# app/views/devise/registrations/new.html.erb (o app/views/admins/registrations/new.html.erb) %>

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 p-8 bg-white bg-opacity-90 rounded-lg shadow-xl">
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        Crea tu cuenta
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        O <a href="<%= new_session_path(resource_name) %>" class="font-medium text-orange-600 hover:text-orange-500">inicia sesión si ya tienes una</a>
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%# Renderiza los mensajes de error de Devise con un estilo coherente %>
      <%# Asegúrate de que este parcial esté estilizado en devise/shared/_error_messages.html.erb %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="rounded-md shadow-sm -space-y-px">
        <%# Campo Email %>
        <div class="relative mb-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: " ", class: "peer block w-full py-3 px-4 border-2 border-gray-300 rounded-full text-gray-900 appearance-none focus:outline-none focus:border-orange-500 bg-white bg-opacity-70" %>
          <%# Label flotante con la lógica corregida %>
          <%= f.label :email, "Correo Electrónico", class: "absolute left-4 text-gray-500 text-base transform duration-300
            -translate-y-full scale-75 bg-white px-1 top-2
            peer-placeholder-shown:top-1/2 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:scale-100 peer-placeholder-shown:bg-transparent peer-placeholder-shown:px-0" %>
        </div>

        <%# Campo Contraseña %>
        <div class="relative mb-4">
          <%= f.label :password, "Contraseña", class: "absolute left-4 text-gray-500 text-base transform duration-300
            -translate-y-full scale-75 bg-white px-1 top-2
            peer-placeholder-shown:top-1/2 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:scale-100 peer-placeholder-shown:bg-transparent peer-placeholder-shown:px-0" %><br />
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500 block mb-2">(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: " ", class: "peer block w-full py-3 px-4 border-2 border-gray-300 rounded-full text-gray-900 appearance-none focus:outline-none focus:border-orange-500 bg-white bg-opacity-70" %>
        </div>

        <%# Campo Confirmar Contraseña %>
        <div class="relative mb-4">
          <%= f.label :password_confirmation, "Confirmar contraseña", class: "absolute left-4 text-gray-500 text-base transform duration-300
            -translate-y-full scale-75 bg-white px-1 top-2
            peer-placeholder-shown:top-1/2 peer-placeholder-shown:-translate-y-1/2 peer-placeholder-shown:scale-100 peer-placeholder-shown:bg-transparent peer-placeholder-shown:px-0" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: " ", class: "peer block w-full py-3 px-4 border-2 border-gray-300 rounded-full text-gray-900 appearance-none focus:outline-none focus:border-orange-500 bg-white bg-opacity-70" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Registrarse", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-lg font-medium rounded-full text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-all duration-300" %>
      </div>
    <% end %>

    <%# Si quieres mostrar otros enlaces (como login o recuperar contraseña) %>
    <%= render "devise/shared/links" %>
    <%# O si es para admins: <%= render "admins/shared/links" %>

  </div>
</div>